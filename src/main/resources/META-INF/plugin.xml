<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.fourlastor.gdxplayground</id>
    <name>GDX playground</name>
    <vendor>fourlastor</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileEditorProvider implementation="com.github.fourlastor.gdxplayground.gdx.GdxEditorProvider" />
        <fileType
                name="glTF Model"
                implementationClass="com.github.fourlastor.gdxplayground.filetype.GltfFile"
                fieldName="INSTANCE"
                extensions="gltf"/>
    </extensions>
</idea-plugin>
